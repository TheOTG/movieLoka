<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Daftar Movie</title>
</head>
<body>
    <%if(adminStatus === true) {%>
        <%include ../../partials/login/login.ejs%>
    <a href="/">back</a>
    <center>
        <a href ="/movie/search">search</a>
    </center>
    <table border="1">    
    	<tbody>
                <tr>
                    <td>id</td>
                    <td>Name</td>
                    <td>Image</td>
                    <td>Now Showing At</td>
                    <%if(adminStatus === true) {%>
                        <td>Options</td> 
                    <%}%>
                </tr>                
                <% for(key of movie){ %>
                <tr>
                    <td> <%= key.id %></td>
                    <td> <%= key.title %></td>       
                    <td> <a href ="/movie/detail/<%= key.id %>"><img src="<%= key.image %>" height="70px"></a> </td>
                    <td>
                        <%if(key.Cinemas.length === 0) {%>
                            Not Available
                        <%} else {%>
                            <%key.Cinemas.forEach(cinema => {%>
                                <%=cinema.name%><br>
                            <%})%>
                        <%}%>
                    </td>
                    <td>
                    <%if(adminStatus === true) {%>
                    <a href="/movie/delete/<%= key.id %>" onclick="return confirm('delete this movie?')" >delete</a>
                    <%}%>
                    </td>
                                       
                </tr>
                    <% } %>
               
                
            </tbody>
        </table>

    <%}%>
</body>
</html>