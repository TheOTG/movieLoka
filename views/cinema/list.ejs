<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
    <style>
            body{
                 background-color:#334559;
                 margin: 0px;
                
             }
             nav{
                 height: 50px;
                 width: 100%;                
                 display: block;
                 background-color: black;
                 color: #fafafa;
                 
             }
             nav .hello{
                 float: left;
                 padding: 20px;
                 display: block;
                 float:right;
                 margin:5px;
             }</style>
</head>
<body>
        <nav><div class="hello" ><%include ../../partials/login/login.ejs%></div></nav>
    <a href="/">back</a>
    <center>
        <%if(adminStatus === true) {%>
        <h2><a href="/cinema/add">add cinema</a></h2>
        <%}%>
        <table cellpadding="5" border="1">
            <thead>
                <td>Cinema name</td>
                <td>Click logo to see movies!</td>
                <%if(adminStatus === true) {%>
                <td>Options</td>
                <%}%>
            </thead>
            <%cinemas.forEach(cinema => {%>
                <tr align="center">
                    <td>
                        <%=cinema.name%>
                    </td>
                    <td>
                        <a href="/cinema/<%=cinema.id%>"><img src="<%=cinema.logo%>" width="100" height="50"></a>
                        <br>
                    </td>
                    <%if(adminStatus === true) {%>
                    <td>
                        <a href="/cinema/<%=cinema.id%>/edit">Edit</a>
                        |
                        <a href="/cinema/<%=cinema.id%>/delete" onclick="return confirm('delete this cinema?')">Delete</a>
                    </td>
                    <%}%>
                </tr>
            <%})%>
        </table>
    </center>
</body>
</html>