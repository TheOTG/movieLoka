            body{
                 background-color:#334559;
                 margin: 0px;
                
             }
             nav{
                 height: 50px;
                 width: 100%;
                
                 display: block;
                 background-color: black;
                 color: #fafafa;
                 
             }
             nav a{
                color: wheat;
            }
             nav .hello{
                 float: left;
                 padding: 20px;
